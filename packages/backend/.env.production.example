# =====================================================
# BBT CONNECT BACKEND - VARIAVEIS DE AMBIENTE (PRODUCAO)
# Copie para .env.production e configure os valores
# =====================================================

# ======== SERVIDOR ========
NODE_ENV=production
PORT=3001
BASE_URL=https://api.seudominio.com.br

# ======== CORS ========
CORS_ORIGIN=https://app.seudominio.com.br

# ======== POSTGRESQL ========
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=bbt_connect
POSTGRES_USER=bbt_user
POSTGRES_PASSWORD=SENHA_SEGURA_AQUI

# ======== SMTP (Email - Codigo de Acesso OTP) ========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=chat.bbttransportes@gmail.com
SMTP_PASS=SUA_APP_PASSWORD_AQUI
SMTP_FROM=BBT Connect <chat.bbttransportes@gmail.com>

# ======== UPLOADS ========
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800

# ======== LOGS ========
LOG_LEVEL=info

# ======== RATE LIMIT ========
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
